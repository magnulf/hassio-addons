{
  "name": "Xcomfort Addon",
  "version": "1",
  "slug": "xcomfort",
  "description": "Starts a container with pyXcomfort inside. Please change the serial port id to match yours. Run `hassio hardware info` to figure which one it is. You need to do this in __main__.py as well.",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "before",
  "boot": "auto",
  "auto_uart": true,
  "options": {
    "device": "",
    "mqtt": {
      "username": "",
      "password": "",
      "host": "",
      "port": 1883,
      "rootTopic": "homeassistant/"
    },
    "devices": [
      {
        "name": "MQTT Light 1",
        "serial": 2268230
      },
      {
        "name": "MQTT Light 2",
        "serial": 4636856
      }
    ]
  },
  "schema": {
    "device": "str",
    "mqtt": {
      "username": "str",
      "password": "str",
      "host": "str",
      "port": "int",
      "rootTopic": "str"
    },
    "devices": [
      {
        "name": "str",
        "serial": "int"
      }
    ]
  }
}
